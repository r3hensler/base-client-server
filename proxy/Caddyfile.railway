:{$PORT:80} {
    # Backend API routes — preserve /api prefix
    handle /api/* {
        reverse_proxy {$BACKEND_URL}
    }

    # Backend health check passthrough
    handle /health {
        reverse_proxy {$BACKEND_URL}
    }

    # Proxy health check
    handle /proxy/health {
        respond "OK" 200
    }

    # Frontend — all other routes (SPA)
    handle {
        reverse_proxy {$FRONTEND_URL}
    }
}
